<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/ava"
            android:layout_width="@dimen/ava_size"
            android:layout_height="@dimen/ava_size"
            android:layout_marginTop="@dimen/img_margtop"
            android:layout_marginRight="@dimen/line_margtop"
            android:scaleType="centerCrop"
            android:background="@color/colorPrimary"
            />
        <TextView
            android:layout_toRightOf="@id/ava"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/nameSize"
            android:text="Name"
            android:lines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_toRightOf="@id/ava"
            android:textSize="@dimen/titleSize"
            android:textColor="@color/black"
            android:text="Title"
            android:lines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_toRightOf="@id/ava"
            android:textSize="@dimen/textSize"
            android:lines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:text="Text"
            />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/time_margright"
            android:text="Time"/>
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_below="@id/text"
            android:layout_marginTop="@dimen/line_margtop"
            />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>